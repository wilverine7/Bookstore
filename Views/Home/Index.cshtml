
@{
}
@model BooksViewModel

@foreach (Books b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @b.Title
            <span class="badge bg-pill bg-primary" style="float:right">
                <small>@b.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@b.Author</div>
    <div class="card-text p-1">@b.Publisher</div>
    <div class="card-text p-1">@b.Isbn</div>
    <div class="card-text p-1">@b.Category</div>
    <div class="card-text p-1">@b.Classification</div>
    <div class="card-text p-1">@b.PageCount</div>
</div>

}
<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>