@{
}

@model IEnumerable<string>

    <div class="d-grid gap-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary" asp-route-category="" asp-route-pageNum="1">Home</a>

        @foreach (string cat in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-category="@cat" asp-route-pageNum="1"
               class= "btn @(ViewBag.SelectedCategory == cat ? "btn-primary" : "btn-outline-secondary")">@cat</a>
        }
    </div>